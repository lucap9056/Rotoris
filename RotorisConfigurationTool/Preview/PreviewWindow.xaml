<Window x:Class="RotorisConfigurationTool.Preview.PreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RotorisConfigurationTool.Preview"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:i18n="clr-namespace:RotorisConfigurationTool.Properties.PreviewWindow"
        xmlns:ui="clr-namespace:RotorisLib.UI;assembly=RotorisLib"
        mc:Ignorable="d"
        Title="Rotoris Preview"
        WindowStyle="None"
        Background="Transparent"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        ShowInTaskbar="False"
        Visibility="Visible"
        ShowActivated="False"
        x:Name="MWindow"
        Height="410" Width="410">
    <Window.Resources>
        <local:PreviewState x:Key="State" />
        <local:MenuNameConverter x:Key="MenuNameConverter" />
        <local:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter" />
        <ui:OptionIconVisualSourceConverter x:Key="OptionIconVisualSourceConverter" />
        <ui:RenderIconContextInputConverter x:Key="RenderIconContextInputConverter" />
        <ui:FocusedOptionRotationConverter x:Key="FocusedOptionRotationConverter" />
        <ui:RenderContextInputConverter x:Key="RenderContextInputConverter" />
        <ui:OptionsVisibilityConverter x:Key="OptionsVisibilityConverter" />
    </Window.Resources>
    <Grid x:Name="MGrid" DataContext="{DynamicResource State}">

        <Path 
            Stroke="{Binding ThemeBrushes.AccentBrush}"
            Fill="{Binding ThemeBrushes.BackgroundBrush}"
            StrokeThickness="3"
            >
            <Path.Data>
                <CombinedGeometry GeometryCombineMode="Exclude">
                    <CombinedGeometry.Geometry1>
                        <EllipseGeometry 
                            RadiusX="{Binding OutsideRadius}" 
                            RadiusY="{Binding OutsideRadius}" 
                            Center="{Binding CenterPoint}"
                            />
                    </CombinedGeometry.Geometry1>
                    <CombinedGeometry.Geometry2>
                        <EllipseGeometry 
                            RadiusX="{Binding InsideRadius}" 
                            RadiusY="{Binding InsideRadius}" 
                            Center="{Binding CenterPoint}"
                            />
                    </CombinedGeometry.Geometry2>
                </CombinedGeometry>
            </Path.Data>
        </Path>

        <Grid
            Visibility="{
            Binding MenuOptions.Length,
            Converter={StaticResource OptionsVisibilityConverter}
            }">
            <!-- Segment indicator for the currently focused menu option -->
            <Path x:Name="FocusedSegmentIndicator" Fill="{Binding ThemeBrushes.AccentBrush}">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="{Binding OptionSector.OuterStartPoint}">
                            <PathFigure.Segments>
                                <ArcSegment
                            Point="{Binding OptionSector.OuterEndPoint}"  Size="{Binding OptionSector.OuterRadiusSize}"  RotationAngle="0"
                            IsLargeArc="{Binding OptionSector.IsLargeArc}"  SweepDirection="Clockwise"
                            IsStroked="True" 
                                    />

                                <LineSegment Point="{Binding OptionSector.InnerStartPoint}"  IsStroked="True" />

                                <ArcSegment
                            Point="{Binding OptionSector.InnerEndPoint}"  Size="{Binding OptionSector.InnerRadiusSize}"  RotationAngle="0"
                            IsLargeArc="{Binding OptionSector.IsLargeArc}"
                            SweepDirection="Counterclockwise"
                            IsStroked="True" 
                                    />

                            </PathFigure.Segments>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
                <Path.RenderTransform>
                    <MultiBinding Converter="{StaticResource FocusedOptionRotationConverter}">
                        <Binding Path="FocusedMenuOptionIndex" />
                        <Binding Path="MenuOptions.Length" />
                        <Binding ElementName="MWindow" Path="ActualWidth" />
                        <Binding ElementName="MWindow" Path="ActualHeight" />
                    </MultiBinding>
                </Path.RenderTransform>
            </Path>

            <!-- Display and layout for the individual menu option icons -->
            <Grid x:Name="OptionsContainer">
                <ui:RenderContextAttacher.ContextData>
                    <MultiBinding Converter="{StaticResource RenderContextInputConverter}">
                        <Binding Path="MenuOptions" />
                        <Binding ElementName="MWindow" Path="ActualWidth" />
                        <Binding ElementName="MWindow" Path="ActualHeight" />
                    </MultiBinding>
                </ui:RenderContextAttacher.ContextData>

                <ItemsControl ItemsSource="{Binding MenuOptions}" AlternationCount="{Binding MenuOptions.Length}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <Canvas IsItemsHost="True"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Canvas x:Name="IconContainer">
                                <ui:RenderContextAttacher.IconRect>
                                    <MultiBinding Converter="{StaticResource RenderIconContextInputConverter}">
                                        <Binding 
                                            Path="(ui:RenderContextAttacher.ContextData)" 
                                            ElementName="OptionsContainer" 
                                            />
                                        <Binding 
                                            RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ContentPresenter}}"
                                            Path="(ItemsControl.AlternationIndex)" 
                                            />
                                    </MultiBinding>
                                </ui:RenderContextAttacher.IconRect>
                                <Path 
                                    Fill="Transparent"
                                    Data="{Binding ElementName=FocusedSegmentIndicator, Path=Data}"
                                    >
                                    <Path.RenderTransform>
                                        <MultiBinding Converter="{StaticResource FocusedOptionRotationConverter}">
                                            <Binding 
                                                RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ContentPresenter}}"
                                                Path="(ItemsControl.AlternationIndex)" 
                                                />
                                            <Binding ElementName="MGrid" Path="DataContext.MenuOptions.Length" />
                                            <Binding ElementName="MWindow" Path="ActualWidth" />
                                            <Binding ElementName="MWindow" Path="ActualHeight" />
                                        </MultiBinding>
                                    </Path.RenderTransform>
                                    <Path.InputBindings>
                                        <MouseBinding
                                            MouseAction="LeftClick"
                                            Command="{Binding DataContext.SelectOptionCommand, ElementName=MGrid}"
                                            >
                                            <MouseBinding.CommandParameter>
                                                <Binding 
                                                    RelativeSource="{RelativeSource Mode=FindAncestor, AncestorType={x:Type ContentPresenter}}"
                                                    Path="(ItemsControl.AlternationIndex)" 
                                                    />
                                            </MouseBinding.CommandParameter>
                                        </MouseBinding>
                                    </Path.InputBindings>
                                </Path>
                                <Image 
                                    IsHitTestVisible="False"
                                    Width="{Binding ElementName=IconContainer, Path=(ui:RenderContextAttacher.IconRect).Width }"
                                    Height="{Binding ElementName=IconContainer, Path=(ui:RenderContextAttacher.IconRect).Height }"
                                    Source="{Binding .,Converter={StaticResource OptionIconVisualSourceConverter}}"
                                    Stretch="Uniform"
                                    SnapsToDevicePixels="True"
                                    Canvas.Top="{Binding ElementName=IconContainer, Path=(ui:RenderContextAttacher.IconRect).Top }"
                                    Canvas.Left="{Binding ElementName=IconContainer, Path=(ui:RenderContextAttacher.IconRect).Left }"
                                    />
                            </Canvas>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>

        <!-- The central circular area for displaying messages or canvas content -->
        <Grid>

            <!-- Central background circle -->
            <Path
                Stroke="{Binding ThemeBrushes.AccentBrush}"
                Fill="{Binding ThemeBrushes.BackgroundBrush}"
                StrokeThickness="3"
                >
                <Path.Data>
                    <CombinedGeometry GeometryCombineMode="Exclude">
                        <CombinedGeometry.Geometry1>
                            <EllipseGeometry 
                                RadiusX="{Binding CenterRadius}" 
                                RadiusY="{Binding CenterRadius}" 
                                Center="{Binding CenterPoint}"
                                />
                        </CombinedGeometry.Geometry1>
                    </CombinedGeometry>
                </Path.Data>
            </Path>

            <!-- Text block for displaying central messages -->
            <TextBlock 
                Text="{
                Binding MessageContent
                }"
                Foreground="{Binding ThemeBrushes.ForegroundBrush}"
                FontSize="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                />
        </Grid>

        <Grid Visibility="{Binding Path=OriginalMenuOptionsString, Converter={StaticResource NotNullToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid
                Grid.Row="0"
                Grid.Column="2"
                VerticalAlignment="Top" 
                HorizontalAlignment="Right" 
                Margin="0,5,5,0" 
                Width="60" 
                Height="60">
                <Grid.InputBindings>
                    <MouseBinding 
                            MouseAction="LeftClick"
                            Command="{Binding CloseCommand}"
                            CommandParameter="{Binding ElementName=MWindow}"
                            />
                </Grid.InputBindings>

                <Ellipse Fill="{Binding ThemeBrushes.AccentBrush}" />

                <Path
                    Stretch="Uniform"
                    Fill="{Binding ThemeBrushes.ForegroundBrush}"
                    Stroke="{Binding ThemeBrushes.ForegroundBrush}"
                    StrokeThickness="5"
                    Width="25"
                    Height="25"
                    Data="M6,6 L18,18 M6,18 L18,6"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                />

            </Grid>

            <Grid
                Grid.Row="1"
                Grid.Column="1"
                >
                <Grid.RowDefinitions>
                    <RowDefinition Height="32" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock 
                    Text="{Binding MenuName, Converter={StaticResource MenuNameConverter}}"
                    HorizontalAlignment="Center"
                    Grid.Row="0"
                    FontSize="16"
                    Foreground="{Binding ThemeBrushes.ForegroundBrush}"
                    />

                <Button 
                    Content="{x:Static i18n:I18n.Edit}"
                    Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    FontSize="18"
                    Foreground="{Binding ThemeBrushes.ForegroundBrush}"
                    >
                    <Button.InputBindings>
                        <MouseBinding 
                            MouseAction="LeftClick"
                            Command="{Binding EditOptionCommand}"
                            CommandParameter="{Binding ElementName=MWindow}"
                            />
                    </Button.InputBindings>
                </Button>
            </Grid>

            <Grid
                Grid.Row="2"
                Grid.Column="2"
                HorizontalAlignment="Right" 
                VerticalAlignment="Bottom" 
                Margin="0,0,5,5" 
                Width="60" 
                Height="60">
                <Grid.InputBindings>
                    <MouseBinding 
                            MouseAction="LeftClick"
                            Command="{Binding AppendOptionCommand}"
                            CommandParameter="{Binding ElementName=MWindow}"
                            />
                </Grid.InputBindings>

                <Ellipse Fill="{Binding ThemeBrushes.AccentBrush}" />

                <Path
                    Stretch="Uniform"
                    Fill="{Binding ThemeBrushes.ForegroundBrush}"
                    Width="25"
                    Height="25"
                    Data="M8,0 L14,0 L14,8 L22,8 L22,14 L14,14 L14,22 L8,22 L8,14 L0,14 L0,8 L8,8 z"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                />

            </Grid>
        </Grid>

    </Grid>
</Window>
