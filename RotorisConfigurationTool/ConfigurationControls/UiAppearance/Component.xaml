<UserControl x:Class="RotorisConfigurationTool.ConfigurationControls.UiAppearance.Component"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RotorisConfigurationTool.ConfigurationControls.UiAppearance"
             xmlns:c="clr-namespace:RotorisConfigurationTool.ConfigurationControls"
             xmlns:i18n="clr-namespace:RotorisConfigurationTool.Properties.ConfigurationControls.UiAppearancePanel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance c:MainContext}"
             >
    <UserControl.Resources>
        <VisualBrush x:Key="TransparentBackground" TileMode="Tile" Viewport="0,0,10,10" ViewportUnits="Absolute">
            <VisualBrush.Visual>
                <Grid Width="20" Height="20">
                    <Rectangle Fill="#CCCCCC" Width="10" Height="10" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Rectangle Fill="#CCCCCC" Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                    <Rectangle Fill="White" Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Top"/>
                    <Rectangle Fill="White" Width="10" Height="10" HorizontalAlignment="Left" VerticalAlignment="Bottom"/>
                </Grid>
            </VisualBrush.Visual>
        </VisualBrush>
        <local:UiAppearanceStateConverter x:Key="UiAppearanceStateConverter" />
        <local:BrushFromColorConverter x:Key="BrushFromColorConverter" />
    </UserControl.Resources>

    <Grid Margin="15"
          d:DataContext="{d:DesignInstance local:UiAppearanceState}"
          >
        <Grid.DataContext>
            <MultiBinding Converter="{StaticResource UiAppearanceStateConverter}">
                <Binding RelativeSource="{RelativeSource AncestorType={x:Type UserControl}}" />
                <Binding RelativeSource="{RelativeSource AncestorType={x:Type UserControl}}" Path="IsTabSelected" />
            </MultiBinding>
        </Grid.DataContext>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="{x:Static i18n:I18n.Size}" 
               Grid.Row="0" Grid.Column="0" 
               Margin="0,5,10,5" 
               VerticalAlignment="Center"/>

        <Button 
                Grid.Row="0" Grid.Column="1" 
                x:Name="SizeButton"
                Content="{x:Static i18n:I18n.AdjustSize}" 
                HorizontalAlignment="Left"
                Width="150"
                Padding="10,3">
            <Button.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding SetSizeCommand}" />
            </Button.InputBindings>
        </Button>

        <Label Content="{x:Static i18n:I18n.Theme}" 
               Grid.Row="1" Grid.Column="0" 
               Margin="0,5,10,5" 
               VerticalAlignment="Center"
            />
        <Canvas
                Grid.Row="1" Grid.Column="1"
                Width="36"
                Height="36"
                HorizontalAlignment="Left"
                >

            <Canvas
                    Canvas.Right="3"
                    Canvas.Top="3"
                    Width="12"
                    Height="12"
                    Background="{StaticResource TransparentBackground}"
                    >
                <Rectangle
                        x:Name="ForegroundColor"
                        Canvas.Top="0"
                        Canvas.Left="0"
                        Width="12"
                        Height="12"
                        Fill="{Binding ForegroundColor, Converter={StaticResource BrushFromColorConverter}}"
                        Stroke="Black"
                        StrokeThickness="1"
                    >
                    <Rectangle.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding SetForegroundColorCommand}" />
                    </Rectangle.InputBindings>
                </Rectangle>
            </Canvas>


            <Canvas
                    Canvas.Right="0"
                    Canvas.Bottom="0"
                    Width="21"
                    Height="21"
                    Background="{StaticResource TransparentBackground}"
                    >
                <Rectangle
                        x:Name="AccentColor"
                        Canvas.Top="0"
                        Canvas.Left="0"
                        Width="21"
                        Height="21"
                        Fill="{Binding AccentColor, Converter={StaticResource BrushFromColorConverter}}"
                        Stroke="Black"
                        StrokeThickness="1"
                    >
                    <Rectangle.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding SetAccentColorCommand}" />
                    </Rectangle.InputBindings>
                </Rectangle>
            </Canvas>

            <Canvas
                    Canvas.Left="0"
                    Canvas.Top="0"
                    Width="21"
                    Height="21"
                    Background="{StaticResource TransparentBackground}"
                    >
                <Rectangle
                        x:Name="BackgroundColor"
                        Canvas.Top="0"
                        Canvas.Left="0"
                        Width="21"
                        Height="21"
                        Fill="{Binding BackgroundColor, Converter={StaticResource BrushFromColorConverter}}"
                        Stroke="Black"
                        StrokeThickness="1"
                    >
                    <Rectangle.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding SetBackgroundColorCommand}" />
                    </Rectangle.InputBindings>
                </Rectangle>
            </Canvas>
        </Canvas>

        <Button 
            Content="{x:Static i18n:I18n.Default}"
            Grid.Row="2" Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Left"
            Margin="0,10,0,0"
            >
            <Button.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding SetDefaultCommand}" />
            </Button.InputBindings>
        </Button>

        <Button 
            Content="{x:Static i18n:I18n.Save}"
            Grid.Row="2" Grid.Column="1"
            HorizontalAlignment="Right"
            Margin="0,10,0,0"
            >
            <Button.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding SaveConfigurationCommand}" />
            </Button.InputBindings>
        </Button>
    </Grid>
</UserControl>
