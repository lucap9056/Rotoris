<UserControl x:Class="RotorisConfigurationTool.ConfigurationControls.AppInfo.Component"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RotorisConfigurationTool.ConfigurationControls.AppInfo"
             xmlns:i18n="clr-namespace:RotorisConfigurationTool.Properties.ConfigurationControls.AppInfo"
             mc:Ignorable="d"
             >
    <UserControl.Resources>
        <local:AppInfo x:Key="AppInfo" />
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock" x:Key="ValueStyle">
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="15" DataContext="{DynamicResource AppInfo}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock 
            Grid.Column="0" Grid.Row="0"
            Text="{x:Static i18n:I18n.Version}"
            Style="{StaticResource LabelStyle}"
            HorizontalAlignment="Right"
            />

        <TextBlock 
            Grid.Column="1" Grid.Row="0"
            Text="{Binding AppVersion}"
            Style="{StaticResource ValueStyle}"
            />

        <Button Margin="0,10,0,0"
            Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="1"
            Content="{x:Static i18n:I18n.AppData}"
            >
            <Button.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding OpenAppDataDirectoryCommand}" />
            </Button.InputBindings>
        </Button>
    </Grid>
</UserControl>
